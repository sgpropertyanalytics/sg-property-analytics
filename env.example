# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET=your-jwt-secret-key-here-change-in-production
ADMIN_API_SECRET=your-admin-secret-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
AUTH_COOKIE_SAMESITE=Lax
# For cross-origin cookie auth (requires HTTPS):
# AUTH_COOKIE_SAMESITE=None
# AUTH_COOKIE_SECURE=true

# Database Configuration (PostgreSQL REQUIRED - SQLite NOT supported)
# Local development with Docker:
#   docker run -d --name sg-property-db -p 5432:5432 \
#     -e POSTGRES_DB=sg_property -e POSTGRES_USER=dev -e POSTGRES_PASSWORD=dev postgres:15
DATABASE_URL=postgresql://dev:dev@localhost:5432/sg_property
# Production: DATABASE_URL=postgresql://user:password@host:port/database

# Application Configuration
CSV_FOLDER=rawdata
FLASK_DEBUG=True

# Data.gov.sg API Key
# Get your API key from: https://data.gov.sg/developer
DATA_GOV_SG_API_KEY=your-data-gov-sg-api-key

# URA API Key (optional - if you have one)
# Get your API key from: https://www.ura.gov.sg/Corporate/Get-Involved/Subscribe-to-URA-Data-Service
URA_API_KEY=your-ura-api-key-here
